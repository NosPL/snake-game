<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="323.0" prefWidth="319.0" xmlns="http://javafx.com/javafx/17"
      fx:controller="com.noscompany.snake.game.online.chat.gui.ChatController">
    <children>
        <AnchorPane prefHeight="238.0" prefWidth="245.0">
            <children>
                <VBox prefHeight="346.0" prefWidth="279.0">
                    <children>
                        <AnchorPane prefHeight="42.0" prefWidth="279.0">
                            <children>
                                <Label layoutX="97.0" layoutY="4.0" prefHeight="35.0" prefWidth="86.0" text="CHAT">
                                    <font>
                                        <Font size="28.0"/>
                                    </font>
                                </Label>
                            </children>
                        </AnchorPane>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                            <children>
                                <ListView fx:id="stringListView" layoutX="-1.0" prefHeight="200.0" prefWidth="279.0"/>
                            </children>
                        </AnchorPane>
                        <TextField fx:id="chatMessageTextField">
                            <VBox.margin>
                                <Insets top="20.0"/>
                            </VBox.margin>
                        </TextField>
                        <Button fx:id="sendChatMessageButton" mnemonicParsing="false" onAction="#sendMessage"
                                prefHeight="28.0" prefWidth="331.0" text="SEND">
                            <VBox.margin>
                                <Insets top="20.0"/>
                            </VBox.margin>
                        </Button>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>
